<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:Journal.Views"
             x:Class="Journal.Views.AllJournals"
             Title="Journals"
             x:DataType="views:JournalModel"
    <ContentPage.Content>
        <StackLayout>
            <ListView ItemsSource="{Binding Journals}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Padding="10">
                                <Label Text="{Binding Title}"/>
                                <Label Text="{Binding Content}" FontAttributes="Bold" />
                                <Label Text="{Binding OriginalPoster}" />
                                <Label Text="{Binding PostingDateTime}" />
                                <Label Text="{Binding IsPrivate, StringFormat='Is Private: {0}'}" />
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>

</ContentPage>